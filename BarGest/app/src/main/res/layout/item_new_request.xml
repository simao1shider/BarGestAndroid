<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CVItemPriduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/TVProductNewRequest"
            android:layout_width="195dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="42dp"
            android:layout_toStartOf="@+id/BtnRemoveNewRequest"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/BtnRemoveNewRequest"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="23dp"
            android:layout_toStartOf="@+id/TVQuantityNewRequest"
            android:background="@drawable/circle_red"
            app:srcCompat="@drawable/ic_baseline_remove_24"
            tools:srcCompat="@drawable/ic_baseline_remove_24" />

        <TextView
            android:id="@+id/TVQuantityNewRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="23dp"
            android:layout_toStartOf="@+id/BtnAddNewRequest"
            android:text="3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/BtnAddNewRequest"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="27dp"
            android:background="@drawable/circle_green"
            app:srcCompat="@drawable/ic_baseline_add_24"
            tools:srcCompat="@drawable/ic_baseline_add_24" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>